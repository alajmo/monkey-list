  position relative
  width 100%
  height $entry-height
  background #dbe1e3
  border 1px solid #c4cbce
  border-radius 3px

form
  width 100%
  height 100%
  //box-sizing border-box
  //padding 5px

input.new-input
  width: 100%
  height: 100%
  font 1.2em verdana
  color #898989
  padding-left 8px


