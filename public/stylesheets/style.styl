//@import "html5-reset"
@import "yui-reset"

textarea, input
  overflow-y hidden
  resize none
  padding 0
  margin 0
  border none
  outline none
  box-sizing border-box
  //line-height 0px
  vertical-align middle
  display block
  border: 2px solid #dadada;

body, html
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0
  padding 0
  height 100%
  width 100%
  background white

a
  outline none
  text-decoration: none
  display block
  color #fff

$w = 50%
$minw = 400px

header
  position relative
  top 0
  left 0
  margin 0
  padding 0
  width 100%
  height 42px
  background #f6f6f6
  //background #70c782
  //background-image url(/images/gradient.png)
  border-shadow 1px #7e9eac solid
  border-bottom 1px solid #cbd7db

div.logo
  position absolute
  left 0
  top 8px
  height 100%

div.logoText
  position absolute
  left 30px
  top 10px
  height 100%
  font 1.3em arial
  line-height 150%
  color #93989a
  color #00b6ff

span.logoText2
  font-weight bold
  font 1.2em arial

.header2
  position relative
  margin 0 auto
  width $w
  min-width $minw
  height 100%

.btn-wrapper
  position absolute
  bottom 5px
  right 0
  height 80%
  background inherit

.button, .toolBtn
  width 65px
  height 100%
  float right
  margin-left 5px
  text-align right
  padding-right 5px
  vertical-align middle
  color #ffffff
  background #00B7FF
  background #6ec8ea
  background #77d288
  background #77b7d2
  font 500 1em Helvetica
  line-height 2.5em
  border none
  cursor pointer

// Section

div.ui-datepicker
  z-index 100 !important

section
  position relative
  top 10px
  height 600px
  width $w
  min-width $minw
  //background blue
  margin 0 auto

.todoList
  position relative
  width 100%
  margin-top 30px
  height auto

$entry-height = 45px
$entry-padding = 3px;
$bd = 15px



