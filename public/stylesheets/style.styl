  padding-right 5px

textarea.commentText
  margin-top 8px
  color #8e8d8d
  font 1em Verdana
  border-sizing border-box

input.deadlineText
  height 20px
  width 140px
  margin-top 8px
  margin-left 0px
  color #8e8d8d
  padding 0
  padding-left 5px
  font 0.9em Verdana

.deadlineHelper
  width auto
  min-width 90%
  height 38px
  position absolute
  bottom -2px
  left 156px
  background #fff

.todoFinished
  text-decoration line-through

// Tool Box
.tool-box
  position absolute
  top -19px
  right 0
  width ($bd*4+36px)
  height ($bd + 4px)
  background #f6f6f6
  background #e8e8e8
  display none
  border-top-left-radius 15px
  border-top-right-radius 15px

.statusBtn, .commentBtn, .deadlineBtn, .deleteBtn
  position absolute
  top 4px
  width $bd
  height $bd
  cursor pointer
  background #d4827e
  border-radius 15px

.statusBtn
  right (3*$bd + 24px)
  background #9db89f

.commentBtn
  right (2*$bd + 18px)
  background #7094a3

.deadlineBtn
  right (1*$bd + 12px)
  background #777fb8

.deleteBtn
  right (0*$bd + 6px)
  background #d4827e

input:focus,
select:focus,
textarea:focus,
button:focus {
  outline none
  border-color: #c1dde8;
  box-shadow: 0 0 1px #c1dde8;
}

// Timepicker

div.ui-datepicker
  font-size 10px

.ui-timepicker-div .ui-widget-header { margin-bottom: 8px; }
.ui-timepicker-div dl { text-align: left; }
.ui-timepicker-div dl dt { height: 25px; margin-bottom: -25px; }
.ui-timepicker-div dl dd { margin: 0 10px 10px 65px; }
.ui-timepicker-div td { font-size: 90%; }
.ui-tpicker-grid-label { background: none; border: none; margin: 0; padding: 0; }

.ui-timepicker-rtl{ direction: rtl; }
.ui-timepicker-rtl dl { text-align: right; }
.ui-timepicker-rtl dl dd { margin: 0 65px 10px 10px; }